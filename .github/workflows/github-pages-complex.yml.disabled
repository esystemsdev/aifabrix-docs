          EOF
          }
          
          # Create HTML pages for each markdown file
          find docs -name "*.md" -type f | while read md_file; do
              filename=$(basename "$md_file" .md)
              title=$(echo "$filename" | sed 's/-/ /g' | sed 's/\b\w/\U&/g')
              html_file="_site/${md_file%.md}.html"
              
              # Create directory if it doesn't exist
              mkdir -p "$(dirname "$html_file")"
              
              create_html_page "$md_file" "$html_file" "$title"
              echo "  Created: $html_file"
          done
          
          echo "‚úÖ Documentation site built successfully with dynamic sidebar navigation"
          
      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: .

