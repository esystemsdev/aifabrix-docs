          .mobile-menu-btn {
              display: none;
              position: fixed;
              top: 20px;
              left: 20px;
              z-index: 1001;
              background: #3498db;
              color: white;
              border: none;
              padding: 10px;
              border-radius: 4px;
              cursor: pointer;
          }
          
          @media (max-width: 768px) {
              .sidebar {
                  transform: translateX(-100%);
                  transition: transform 0.3s ease;
              }
              .sidebar.open {
