# AI Fabrix Documentation Sync Configuration
# Copy this file to .env and update with your actual values

# Document360 API Configuration
DOCUMENT360_API_TOKEN=your_api_token_here
DOCUMENT360_PROJECT_ID=your_project_id_here
DOCUMENT360_BASE_URL=https://api.document360.com

# Sync Configuration
SYNC_SOURCE_PATH=./docs
SYNC_BATCH_SIZE=10
SYNC_RETRY_ATTEMPTS=3
SYNC_RETRY_DELAY=1000

# Optional: Database Configuration
DATABASE_PATH=./data/sync.db

# Optional: Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/sync.log
LOG_CONSOLE=true

# Optional: Mock Mode (for testing)
MOCK_MODE=false

